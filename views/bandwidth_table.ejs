<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="table-responsive-xxl">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Month</th>
              <th scope="col">Project Name</th>
              <th scope="col">Status</th>
              <th scope="col">Facility</th>
              <th scope="col">Tower</th>
              <th scope="col">BU</th>
              <th scope="col">Subnet</th>
              <th scope="col">PAT IP</th>
              <th scope="col">PIDB</th>
              <th scope="col">GDCN ID</th>
              <th scope="col">Partition Name</th>
              <th scope="col">ISP</th>
              <th scope="col">Internet Bandwidth (in MB)</th>
              <th scope="col">WBSe</th>
              <th scope="col">RFC</th>
              <th scope="col">Implementation Date</th>
              <th scope="col">AMT POC</th>
              <th scope="col">BCP Bandwidth</th>
              <th scope="col">Comments</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td><select class="form-select" id="month" aria-label="month">...</select></td>
              <td><input class="form-control" type="text" placeholder="Project Name" aria-label="projectName" id="projectName"></td>
              <td><select class="form-select" id="status" aria-label="status">...</select></td>
              <td><select class="form-select" id="facility" aria-label="facility">...</select></td>
              <td><select class="form-select" id="tower" aria-label="tower">...</select></td>
              <td><input class="form-control" type="text" placeholder="Business Unit" aria-label="bu" id="bu"></td>
              <td><input class="form-control" type="text" placeholder="Subnet" aria-label="subnet" id="subnet"></td>
              <td><input class="form-control" type="text" placeholder="PAT IP" aria-label="pat" id="pat"></td>
              <td><input class="form-control" type="text" placeholder="PIDB" aria-label="pidb" id="pidb"></td>
              <td><input class="form-control" type="text" placeholder="GDCN" aria-label="gdcn" id="gdcn"></td>
              <td><input class="form-control" type="text" placeholder="Partition Name" aria-label="partition" id="partition"></td>
              <td><input class="form-control" type="text" placeholder="ISP" aria-label="isp" id="isp"></td>
              <td><input class="form-control" type="text" placeholder="Bandwidth(in Mb)" aria-label="bw" id="bw"></td>
              <td><input class="form-control" type="text" placeholder="WBSE" aria-label="wbse" id="wbse"></td>
              <td><input class="form-control" type="text" placeholder="RFC" aria-label="rfc" id="rfc"></td>
              <td><input class="form-control" type="text" placeholder="Implementation Date" aria-label="implementationDate" id="implementationDate"></td>
              <td><input class="form-control" type="text" placeholder="AMT POC" aria-label="amt" id="amt"></td>
              <td><select class="form-select" id="bcp" aria-label="bcp">...</select></td>
              <td><textarea class="form-control" id="comment" rows="1" cols="50"></textarea></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
